{
  "name": "@workspace/hono",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "description": "Bulletproof Hono 4 template",
  "author": "Tri Rizeki Rifandani",
  "license": "MIT",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "ngrok": "ngrok http --url=freely-equal-shepherd.ngrok-free.app 3333",
    "db:pull": "dotenvx run --env-file=.env.dev -- drizzle-kit pull",
    "db:push": "dotenvx run --env-file=.env.dev -- drizzle-kit push --verbose --strict",
    "db:gen": "dotenvx run --env-file=.env.dev -- drizzle-kit generate",
    "db:migrate": "dotenvx run --env-file=.env.dev -- drizzle-kit migrate",
    "db:studio": "dotenvx run --env-file=.env.dev -- drizzle-kit studio --port 3003 --verbose",
    "auth:gen": "dotenvx run --env-file=.env.dev -- bunx @better-auth/cli generate --config ./src/auth/libs/index.ts --output ./src/db/auth-schema.ts --yes",
    "test": "vitest",
    "dev": "bun run --env-file=.env.dev --hot --preload src/instrumentation.ts src/bun.ts",
    "dev:prod": "bun run --env-file=.env.prod --hot --preload src/instrumentation.ts src/bun.ts",
    "node:dev": "dotenvx run --env-file=.env.dev -- tsx watch --import src/instrumentation.ts src/node.ts",
    "node:dev:prod": "dotenvx run --env-file=.env.prod -- tsx watch --import src/instrumentation.ts src/node.ts",
    "node:build": "dotenvx run --env-file=.env.dev -- tsc -p .",
    "node:build:prod": "dotenvx run --env-file=.env.prod -- tsc -p .",
    "node:start": "dotenvx run --env-file=.env.dev -- node ./dist/node.js",
    "node:start:prod": "dotenvx run --env-file=.env.prod -- node ./dist/node.js"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "1.48.4",
    "@hono/node-server": "1.18.1",
    "@hono/otel": "0.4.0",
    "@hono/zod-openapi": "1.1.0",
    "@hono/zod-validator": "0.7.2",
    "@opentelemetry/api": "1.9.0",
    "@opentelemetry/api-logs": "0.203.0",
    "@opentelemetry/exporter-logs-otlp-http": "0.203.0",
    "@opentelemetry/exporter-metrics-otlp-http": "0.203.0",
    "@opentelemetry/exporter-trace-otlp-http": "0.203.0",
    "@opentelemetry/instrumentation-dns": "0.47.0",
    "@opentelemetry/instrumentation-http": "0.203.0",
    "@opentelemetry/instrumentation-net": "0.47.0",
    "@opentelemetry/instrumentation-pg": "0.55.0",
    "@opentelemetry/instrumentation-runtime-node": "0.17.0",
    "@opentelemetry/instrumentation-undici": "0.14.0",
    "@opentelemetry/resources": "2.0.1",
    "@opentelemetry/sdk-logs": "0.203.0",
    "@opentelemetry/sdk-metrics": "2.0.1",
    "@opentelemetry/sdk-node": "0.203.0",
    "@opentelemetry/sdk-trace-node": "2.0.1",
    "@opentelemetry/semantic-conventions": "1.36.0",
    "@scalar/hono-api-reference": "0.9.13",
    "@scalar/openapi-to-markdown": "0.2.26",
    "@t3-oss/env-core": "0.13.8",
    "@workspace/core": "workspace:*",
    "better-auth": "1.3.4",
    "drizzle-orm": "0.44.4",
    "drizzle-seed": "0.3.1",
    "drizzle-zod": "0.8.3",
    "hono": "4.9.0",
    "hono-rate-limiter": "0.4.2",
    "ky": "1.8.2",
    "pg": "8.16.3",
    "radashi": "12.6.1",
    "ts-pattern": "5.8.0",
    "type-fest": "4.41.0",
    "zod": "4.0.17",
    "zod-validation-error": "4.0.1"
  },
  "devDependencies": {
    "@types/bun": "1.2.20",
    "@types/node": "24.2.1",
    "@types/pg": "8.15.5",
    "@workspace/typescript-config": "workspace:*",
    "drizzle-kit": "0.31.4",
    "tsx": "4.20.3",
    "typescript": "5.9.2",
    "vitest": "3.2.4"
  }
}
